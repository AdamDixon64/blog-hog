<div id="create_body">
  <div class="flex">
    <div class="container">
      <div class="create_post_container">
        <form action="/edit-post/<%- post.id %>" method="POST">

          <div class="form_element">
            <label for="postTitle">Title</label>
            <input type="text" id="postTitle" name="postTitle" value="<%- post.title %>" required>
          </div>

          <div class="form_element">
            <label for="postBody">Post</label>
            <textarea type="text" id="postBody" name="postBody" required><%- post.postBody %></textarea>
          </div>
          
          <div class="form_element">
            <button class="submit">Submit</button>
          </div>
        </form> 
      </div>
    </div>
  </div>
</div>
